<div class="container my-5">
  <div class="row">
    <div class="offset-1 col-11">

      <h5 class="h4 ml-5 pt-4 font-weight-bold"><%= @user.name %>さんの会員情報</h5>

      <!--会員情報-->
      <table class="table table-borderless mt-4">
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">会員ID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">ユーザー名</td>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">自己紹介</td>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">性別</td>
          <td><%= @user.gender_i18n %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">年齢</td>
         <td><%= @user.age_i18n %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">中国語学習歴</td>
          <td><%= @user.study_background_i18n %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">居住地域</td>
          <td><%= @user.living_area_i18n %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">アンサーランク</td>
          <td><%= @user.answer_rank_i18n %></td>
        </tr>
        <tr>
          <td class="align-middle font-weight-bold" style="width: 30%">会員ステータス</td>
          <td>
            <% if @user.is_deleted %>
              <span style="color: gray;">無効</span>
            <% else %>
              <span style="color: green;">有効</span>
            <% end %>
          </td>
        </tr>
      </table>
      <!--編集するボタン-->
      <div class="text-center">
        <%= link_to "編集する", edit_admin_user_path(@user), class: "mt-2 btn btn-success btn-lg" %>
      </div>

    </div>
  </div>
</div>