<div class="container">
  <div class="row">
    <div class="offset-1 col-11">

      <div class="row pt-5 pl-5">
        <div class="col-6 h3 font-weight-bold">ブックマーク一覧</div>
      </div>

      <div class="content-box mt-4">
        <% if @bookmarks.blank? %>
          <div class="text-center my-4">
            <h5>ブックマークはありません</h5>
          </div>
        <% else %>
          <!--1質問-->
          <% @bookmarks.each do |bookmark| %>
            <div class="question mt-3 border mx-auto">
              <div class="question-title m-3">
                <%= link_to truncate(bookmark.question.title, length: 34, omission: '...'), question_path(bookmark.question) %>
              </div>
              <hr>
              <!--回答者情報-->
              <div class="row m-3">
                <div class="col-8">
                  <!--回答者のプロフィール画像を3つまで取り出す-->
                  <% count = 0 %>
                  <% bookmark.question.answers.each do |answer| %>
                    <% if count < 3 %>
                      <%= image_tag answer.user.get_profile_image(35, 35), class: "rounded-circle" %>
                      <% count += 1 %>
                    <% else %>
                      <% break %>
                    <% end %>
                  <% end %>
                  <b class="ml-1"><%= bookmark.question.answers.count %>人が回答済み</b>
                </div>
                <!--ブックマーク・閲覧数-->
                <div class="col-4 pl-5 mt-2">
                  <!--ブックマークボタン-->
                  <% if current_user %>
                    <% if bookmark.question.bookmarked_by?(current_user) %>
                      <%= link_to question_bookmark_path(bookmark.question, question_id: bookmark.question.id), method: :delete do %>
                        <i class="fa-solid fa-bookmark" style="font-size: 20px; color: gray;"></i>
                      <% end %>
                    <% else %>
                      <%= link_to question_bookmarks_path(bookmark.question, question_id: bookmark.question.id), method: :post do %>
                        <i class="far fa-bookmark" style="font-size: 20px; color: gray;"></i>
                      <% end %>
                    <% end %>
                  <% else %>
                    <!--ユーザーが未ログインの場合はログインページに遷移する-->
                    <%= link_to new_user_session_path do %>
                      <i class="far fa-bookmark" style="font-size: 20px; color: gray;"></i>
                    <% end %>
                  <% end %>
                  <span class="ml-1" style="font-size: 16px;"><%= bookmark.question.bookmarks.count %></span>
                  <i class="fas fa-eye ml-4 pt-1"  style="font-size: 20px;"></i>
                  <span class="ml-1" style="font-size: 16px;"><%= bookmark.question.views_count %></span>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!--ページネーションの設定-->
      <div class="row">
        <div class="mt-4 mx-auto">
          <%= paginate @bookmarks, theme: 'bootstrap-5' %>
        </div>
      </div>


    </div>
  </div>
</div>