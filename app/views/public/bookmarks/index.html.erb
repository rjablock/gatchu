<div class="container my-5 my-lg-0">
  <div class="row">
    <div class="offset-lg-1 col-lg-11">

      <div class="row pt-5 pl-2 pl-lg-5">
        <div class="col-lg-6 h3 font-weight-bold">ブックマーク一覧</div>
        <div class="offset-lg-2 col-lg-4 pt-lg-3">
          総ブックマーク数：<%= @questions.count %>件
        </div>
      </div>

      <div class="content-box mt-4">
        <% if @questions.blank? %>
          <div class="text-center my-4">
            <h5>ブックマークはありません</h5>
          </div>
        <% else %>
          <%= render 'public/questions/one_question', questions: @questions %>
        <% end %>
      </div>

      <!--ページネーションの設定-->
      <div class="row">
        <div class="mt-4 mx-auto">
          <%= paginate @questions, theme: 'bootstrap-5' %>
        </div>
      </div>


    </div>
  </div>
</div>