<div class="container">
  <div class="row">
    <div class="offset-1 col-11">

      <div class="content-box", style="margin-top: 100px;">

        <div class="row pt-4 px-4">
          <div class="col-3 mr-5">
            <%= image_tag @user.get_profile_image(150, 150), class: "rounded-circle mr-5", style: "border: 3px solid #066285;" %>
          </div>
          <div class="col-4 mt-4">
            <h3 class="font-weight-bold"><%= @user.name %></h3>
            <div class="mt-3 pl-1"><i class="fas fa-fire-alt fa-lg text-danger"></i> <%= @user.answer_rank_i18n %>ランク</div>
          </div>
          <div class="col-4 mt-3">
            <% if @user == current_user %>
              <%= link_to user_path(@user), class: "btn btn-primary" do %>
                <i class="fa-regular fa-user"></i> プロフィール編集
              <% end %>
              <%= link_to user_bookmarks_path(@user), class: "mt-3 btn btn-outline-success" do %>
                <i class="far fa-bookmark"></i> ブックマーク一覧
              <% end %>
            <% end %>
          </div>
        </div>

        <table class="table table-borderless ml-5 mt-4">
          <tr>
            <td class="align-middle font-weight-bold" style="width: 13%">性別：</td>
            <td><%= @user.gender_i18n %></td>
          </tr>
          <tr>
            <td class="align-middle font-weight-bold">年齢：</td>
           <td><%= @user.age_i18n %></td>
          </tr>
          <tr>
            <td class="align-middle font-weight-bold">学習歴：</td>
            <td><%= @user.study_background_i18n %></td>
          </tr>
          <tr>
            <td class="align-middle font-weight-bold">居住地：</td>
            <td><%= @user.living_area_i18n %></td>
          </tr>
        </table>

      </div>

    </div>
  </div>
</div>