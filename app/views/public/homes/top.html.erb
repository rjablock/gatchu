<div class="container">

  <!--今日の中国語-->
  <div class="row">
    <div class="offset-1 col-11">
      <%= link_to today_words_path do %>
        <div class="mt-4 mx-auto p-4" style="background-color: white; width: 90%; height: 300px;"></div>
      <% end %>
    </div>
  </div>

  <!--ニュース表示枠-->
  <div class="row">

    <div class="offset-1 col-8">
      <div class="content-box mt-4 mx-auto pl-3", style="height: 96%">
        <!--1つの行に2記事を表示する-->
        <div class="row mx-auto w-100">
          <% @posts.each do |post| %>
            <!--１記事-->
            <div class="col-6">
              <%= link_to post_path(post.id) do %>
                <div class="news border my-3">
                  <div class="news-image mt-2 mx-auto">
                    <%= image_tag post.get_image(200, 136), style: "border-radius: 10px;" %>
                  </div>
                  <div class="m-2 border text-center text-dark" style="width: 45%; font-size: 14px">
                    <%= post.genre.name %>
                  </div>
                  <div class="news-caption ml-3 mr-1">
                    <%= truncate(post.title, length: 22, omission: '...') %>
                  </div>
                  <div class="m-3 text-dark" style="font-size: 12px; position: absolute; bottom: 3%;">
                    <i class="far fa-clock"></i>
                    <%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %>
                  </div>
                </div>
              <% end %>
            </div>

          <% end %>
        </div>

        <!--ページネーションの設定-->
        <div class="row">
          <div class="mt-2 mx-auto">
            <%= paginate @posts, theme: 'bootstrap-5' %>
          </div>
        </div>

      </div>
    </div>

    <!--ニュースのジャンル表示サイドバー-->
    <div class="col-3">
      <div class="content-box mt-4 mx-auto", style="height: 96%">
        <table class="table table-borderless">
          <thead>
            <th>ジャンル一覧</th>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
              <tr><td>
                <%= link_to posts_path do %>
                  <%= link_to genre.name, posts_path(genre_id: genre.id) %>
                <% end %>
              </td></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

  </div>

  <!--新着質問板-->
  <div class="row">
    <div class="offset-1 col-11">
      <div class="content-box mt-4 mx-auto">

        <div class="row mt-3">
          <span class="col-3 h3 ml-5 font-weight-bold">新着質問板</span>
        </div>

        <!--1質問-->
        <% @questions.each do |question| %>
          <div class="question mt-3 border mx-auto">
            <div class="question-title m-3">
              <%= link_to truncate(question.title, length: 34, omission: '...'), question_path(question) %>
            </div>
            <hr>
            <!--回答者情報-->
            <div class="row m-3">
              <div class="col-8">
                <!-- 一意に回答者のプロフィール画像を3つまで取り出す -->
                <% unique_users = question.answers.map(&:user).uniq %>
                <% unique_users.first(3).each do |user| %>
                  <%= image_tag user.get_profile_image(35, 35), class: "rounded-circle" %>
                <% end %>
                <b class="ml-1"><%= unique_users.count %>人が回答済み</b>
              </div>
              <!--ブックマーク・閲覧数-->
              <div class="col-4 pl-5 mt-2">
                <!--ブックマークボタン-->
                <% if current_user %>
                  <% if question.bookmarked_by?(current_user) %>
                    <%= link_to question_bookmark_path(question, question_id: question.id), method: :delete do %>
                      <i class="fa-solid fa-bookmark" style="font-size: 20px; color: gray;"></i>
                    <% end %>
                  <% else %>
                    <%= link_to question_bookmarks_path(question), method: :post do %>
                      <i class="far fa-bookmark" style="font-size: 20px; color: gray;"></i>
                    <% end %>
                  <% end %>
                <% else %>
                  <!--ユーザーが未ログインの場合はログインページに遷移する-->
                  <%= link_to new_user_session_path do %>
                    <i class="far fa-bookmark" style="font-size: 20px; color: gray;"></i>
                  <% end %>
                <% end %>
                <span class="ml-1" style="font-size: 16px;"><%= question.bookmarks.count %></span>
                <i class="fas fa-eye ml-4 pt-1"  style="font-size: 20px;"></i>
                <span class="ml-1" style="font-size: 16px;"><%= question.views_count %></span>
              </div>
            </div>
          </div>
        <% end %>

        <p class="border border-dark text-center ml-4 mt-4 pt-3" style="font-size: 30px; height: 75px; width: 93%">
          <%= link_to "質問板TOPへ", questions_path, class: "text-dark" %>
        </p>

      </div>
    </div>
  </div>

  <p class="mt-1 text-right">※投稿・回答機能のご利用にはログインが必要です。</p>


</div>